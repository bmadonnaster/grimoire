depends libtool &&
depends GETTEXT &&

optional_depends file \
                 "--with-libmagic" \
                 "--without-libmagic" \
                 "to determine mimetypes (via libmagic)" &&

optional_depends gtk+2 \
                 "--with-gtk" \
                 "--without-gtk" \
                 "to determine mimetypes (via GTK+)" &&

optional_depends libx11 \
                 "--with-X11" \
                 "--without-X11" \
                 "to determine terminal emulator title"
