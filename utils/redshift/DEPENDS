optional_depends python3 \
                 "--enable-gui" \
                 "--disable-gui" \
                 "for GUI status icon" &&

if is_depends_enabled ${SPELL} python3; then
  depends pygobject3 &&

  suggest_depends pyxdg "" "" "for optional autostart support in GUI"
fi &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "to use Native Language Support"
