make_single                          &&
make install DESTDIR="$INSTALL_ROOT" &&
make_normal                          &&

if [[ ! -e "$INSTALL_ROOT/etc/filesystems" ]]; then
  install -vm 644 "$SPELL_DIRECTORY/filesystems" "$INSTALL_ROOT/etc"
fi &&

mkdir -p $INSTALL_ROOT/etc/profile.d/ &&
if install_config_file  $SCRIPT_DIRECTORY/profile.d/pager.sh \
                        $INSTALL_ROOT/etc/profile.d/pager.sh; 
then
  chmod  0755  $INSTALL_ROOT/etc/profile.d/pager.sh
fi &&

ln -sfn libmount.so.1.1.0 "${INSTALL_ROOT}/usr/lib/libmount.so.1" &&
ln -sfn libuuid.so.1.3.0  "${INSTALL_ROOT}/usr/lib/libuuid.so.1"  &&
ln -sfn libblkid.so.1.1.0 "${INSTALL_ROOT}/usr/lib/libblkid.so.1" &&
ln -sfn libsmartcols.so.1.1.0 "${INSTALL_ROOT}/usr/lib/libsmartcols.so.1"

