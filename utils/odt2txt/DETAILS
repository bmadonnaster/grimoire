         VERSION=0.5
          SOURCE="${SPELL}-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:95d782a088908518191dd0dcd294676fff25c95a2f23a2b8577b8e3adcce2f9d6d5ccaa2a02c7d36be19d05687a4d7a43bed36056c044af0934af810363c7ce0
