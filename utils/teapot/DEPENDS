depends ncurses &&
depends cmake &&

optional_depends lyx \
		 -DENABLE_HELP={on,off} \
		 'for building the user manual (HTML & PDF)' &&
if is_depends_enabled "$SPELL" lyx
then
  depends latex2html
fi &&

optional_depends fltk \
                 "" \
                 "" \
                 "graphical interface" &&

if is_depends_enabled $SPELL fltk
then
  depends -sub CXX gcc
fi

