  depends JACK-DRIVER
fi &&
if list_find "$ARDOUR6_AUDIO" alsa; then
  depends alsa-lib
fi &&
if list_find "$ARDOUR6_AUDIO" pulseaudio; then
  depends pulseaudio
fi &&

