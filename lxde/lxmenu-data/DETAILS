           SPELL=lxmenu-data
         VERSION=0.1.5
          SOURCE="${SPELL}-${VERSION}.tar.xz"
   SOURCE_URL[0]=https://downloads.sourceforge.net/sourceforge/lxde/${SOURCE}
     SOURCE_HASH=sha512:ea1a1ad511d9e56c7692a8d96feb52c53aa7bd7595f2312d4f41fc15a12a056551c70d6a2c55a30f849e2ac2fd1a06436751573472ae70e0158e069736578b40
