optional_depends zlib \
                 "HAVE_ZLIB=1" \
                 "HAVE_ZLIB=0" \
                 "for .gz compression support" &&

optional_depends LZMA \
                 "HAVE_LZMA=1" \
                 "HAVE_LZMA=0" \
                 "for .xz/.lzma compression support" &&

optional_depends lz4 \
                 "HAVE_LZ4=1" \
                 "HAVE_LZ4=0" \
                 "for .lz4 compression support"
