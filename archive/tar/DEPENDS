depends smgl-fhs &&

optional_depends acl \
                 "--enable-acl" \
                 "--disable-acl" \
                 "for Access Control Lists support" &&

optional_depends attr \
                 "--with-xattrs" \
                 "--without-xattrs" \
                 "to use extended attributes" &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends xz-utils "" "" "for LZMA support"
