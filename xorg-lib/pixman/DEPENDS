depends meson &&
depends ninja-build-system &&
# This is just too dangerous, enables itself if gtk is found and triggers
# nasty build failures. If you want pixman demos, build it manually
# someplace.
OPTS+=" gkt=disabled" &&
optional_depends libpng \
                 "libpng=enabled" \
                 "libpng=disabled" \
                 "for PNG support"
