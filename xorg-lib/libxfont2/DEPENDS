                  "--enable-freetype"          \
                  "--disable-freetype"         \
                  "Enable freetype2 support?"  &&

optional_depends  HTML_TO_TEXT                                 \
                  '--enable-devel-docs'                        \
                  '--disable-devel-docs'                       \
                  'for converting HTML documentation to text'  &&

optional_depends  bzip2  \
                  '--with-bzip2'  \
                  '--without-bzip2'  \
                  'for bzip2 compressed bitmap fonts'
