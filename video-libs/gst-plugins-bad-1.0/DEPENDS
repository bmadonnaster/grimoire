                  "--enable-bz2"                              \
                  "--disable-bz2"                             \
                  "for bzip2 compressor/decompressor plugin"  &&
optional_depends  libdca                    \
                  "--enable-dts"            \
                  "--disable-dts"           \
                  "for DTS audio decoding"  &&
