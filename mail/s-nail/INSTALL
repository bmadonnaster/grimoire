DESTDIR="${INSTALL_ROOT}/" default_install &&
ln -sfn /usr/bin/s-mail ${INSTALL_ROOT}/usr/bin/mail &&
ln -sfn /usr/bin/s-mail ${INSTALL_ROOT}/usr/bin/mailx &&
ln -sfn /usr/share/man/man1/s-mail.1 ${INSTALL_ROOT}/usr/share/man/man1/mail.1 &&
ln -sfn /usr/share/man/man1/s-mail.1 ${INSTALL_ROOT}/usr/share/man/man1/mailx.1
