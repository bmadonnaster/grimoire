#!/bin/bash

#PROGRAM=/usr/bin/false
#ARGS="-u seatd"
RUNLEVEL=3
NEEDS="smgl-messagebus"

. /etc/init.d/smgl_init

case $1 in
        start)
                echo "Starting Seatd daemon"
		/usr/bin/seatd -u seatd &
                evaluate_retval
                ;;
        stop)
                echo "Stopping Seatd"
                pkill -9 seatd
                evaluate_retval
                ;;

        *)
                echo "Usage: $0 {start|stop}"
                exit 1
                ;;
esac
