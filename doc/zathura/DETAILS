 SOURCE_HINTS[0]="no-check-certificate"
     SOURCE_HASH=sha256:aa629259c6ac729e90abdda1b9b51854adaa6851192f08a55e63379500541ec8:UPSTREAM_HASH
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
        DOC_DIRS=""
