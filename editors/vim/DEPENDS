if [[ "${VIM_BRANCH}" == "scm" ]]
then depends git
fi &&

optional_depends  GETTEXT                        \
                  "--enable-nls"                 \
                  "--disable-nls"                \
                  "for Native Language Support"  &&

optional_depends  tcl                          \
                  "--enable-tclinterp"         \
                  ""                           \
                  "to enable Tcl interpreter"  &&

if [[ "${VIM_FEATURES}" != "tiny"  ]] &&
   [[ "${VIM_FEATURES}" != "small" ]]

then
    optional_depends  LUA                           \
                      "--enable-luainterp"          \
                      ""                            \
                      "to enable Lua interpreter"   &&

    optional_depends  perl                          \
                      "--enable-perlinterp"         \
                      ""                            \
                      "to enable Perl interpreter"  &&

    optional_depends  python                          \
                      "--enable-pythoninterp"         \
                      ""                              \
                      "to enable Python interpreter"  &&

    optional_depends  python3                         \
                      "--enable-python3interp"        \
                      ""                              \
                      "to enable Python3 interpreter" &&


    optional_depends  RUBY                          \
                      "--enable-rubyinterp"         \
                      ""                            \
                      "to enable Ruby interpreter"  &&
    
    optional_depends  cscope                        \
                      "--enable-cscope"             \
                      ""                            \
                      "to enable cscope interface"
fi

optional_depends  gpm                          \
                  "--enable-gpm"               \
                  "--disable-gpm"              \
                  "for console mouse support"  &&

optional_depends acl                           \
                 "--enable-acl"                \
                 "--disable-acl"               \
                 "would you like file system access control list support?" &&

case "$GVIM_GUI" in
gtk)
  depends  gtk+ ;;
gnome)
  depends  gnome-libs ;;
gtk2)
  depends  gtk+2 ;;
gtk3)
  depends  gtk+3 ;;
gnome2)
  depends  libgnomeui ;;
motif)
  depends  MOTIF ;;
athena)
  depends  xorg-libs ;;
esac
