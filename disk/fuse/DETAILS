. "$GRIMOIRE/FUNCTIONS"
           SPELL=fuse
if [ "$FUSE_BRANCH" != "scm" ]; then
         VERSION=2.9.9
     SOURCE_HASH=sha512:1acd51a647ec3dbf9eaafb80cec92bd8542bcbb2cf4510fc8b079b4f8aaa8f4b301e469ddefe4f1cc4ae2bf941e028077601c20d97f187cc618cea8710cbe331:WORKS_FOR_ME
          SOURCE=$SPELL-$VERSION.tar.gz
   SOURCE_URL[0]=https://github.com/libfuse/libfuse/releases/download/${SPELL}-$VERSION/$SOURCE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/libfuse-$SPELL-$VERSION
else
         VERSION=$(get_scm_version)
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=https://github.com/libfuse/libfuse.git
  FORCE_DOWNLOAD=on
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
fi
        WEB_SITE=http://fuse.sourceforge.net/
         ENTERED=20040209
      LICENSE[0]=GPL
        KEYWORDS="disk"
           SHORT="interface for filesystems implemented in userspace"
cat << EOF
FUSE (Filesystem in USErspace) is an interface for filesystems implemented
in userspace.
EOF
