. "${GRIMOIRE}/FUNCTIONS"
           SPELL="pifs"
         VERSION=$(get_scm_version)
          SOURCE="${SPELL}-git.tar.bz2"
   SOURCE_URL[0]="git://github.com/philipl/pifs:pifs-git"
  FORCE_DOWNLOAD="on"
