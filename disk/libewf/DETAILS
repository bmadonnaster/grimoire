          SOURCE=$SPELL-$VERSION.tar.gz
        WEB_SITE=https://github.com/libyal/libewf
      SOURCE_URL=("$WEB_SITE/releases/download/$VERSION/${SOURCE/-/-$STATUS-}")
     SOURCE_HASH=sha512:610174971b8e09385f1f51c02e7be36e7a18d21f8b22ddeb7ba7d5c20e7df97591a70de3523b2d63bed8deb5a2a170a14e825f6a80aeb0937553ecae5925ee0b
