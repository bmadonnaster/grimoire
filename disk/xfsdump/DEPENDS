. "$GRIMOIRE/FUNCTIONS" &&

depends autoconf &&
depends attr &&
depends dmapi &&
depends xfsprogs &&

if spell_ok xfsprogs && is_version_less $(installed_version xfsprogs) 3.0.5; then
  force_depends xfsprogs
fi &&

optional_depends GETTEXT \
                 "--enable-gettext" \
                 "--disable-gettext" \
                 "for alternate language support"
