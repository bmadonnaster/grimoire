else
         VERSION=2.74.0
  SOURCE_HASH[0]=sha512:d78374c31631d7d1fb30ceb7c6016ab970cb321b06191d3463f178ceea9dacd08c828b8f16f5a30c185489ebfbc93ff9da09ae4978be3e3ff11bf7ee95a2a9a6
          SOURCE=$SPELL-$VERSION.tar.xz
