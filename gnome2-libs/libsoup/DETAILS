else
         VERSION=3.0.0
  SOURCE_HASH[0]=sha512:4c7388b18fdaf11d6685548935b87dd3f8770dcb05f1a4c55b8d3af277751c041e7ed569ff9bced9bfbb091dd93c59a17c9ff479678fb74bdba5dc8cefb254c4
          SOURCE=$SPELL-$VERSION.tar.xz
