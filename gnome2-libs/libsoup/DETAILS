          SOURCE=$SPELL-$VERSION.tar.xz
else
         VERSION=2.66.4
  SOURCE_HASH[0]=sha512:c1d57c6c5099ac345373409dd3f384dd454e47218cc6bd8be1c6b2de967d7753bfcc3010836f7131f049b1ab9c49318d6ae5203be0bcc0ca5d4b62a0c64f27ad
          SOURCE=$SPELL-$VERSION.tar.xz
