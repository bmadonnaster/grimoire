else
         VERSION=2.70.0
  SOURCE_HASH[0]=sha512:c3e2a963f4b38b2eee5d772b68a325c076fde19c26413bb3ada91824d3c7e108fbc325bfdc49a28141a641233485d3044d18142720c2aebaa7cc820f8718159b
          SOURCE=$SPELL-$VERSION.tar.xz
