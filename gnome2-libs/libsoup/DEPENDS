depends  meson         &&
depends  dbus          &&
depends  glib2         &&
depends  libgcrypt     &&
depends  libgpg-error  &&
depends  libpsl        &&
depends  libtool       &&
depends  libxml2       &&
depends  sqlite        &&

if [[ $LIBSOUP_GNOME == "y" ]]; then
  depends libproxy &&
  depends gconf2   &&
  depends libgnome-keyring
fi &&

if [[ $LIBSOUP_DEVEL == "y" ]]; then
  sub_depends glib2 'GLIB_DEVEL'
fi &&

optional_depends krb5 gssapi={true,false} "GSSAPI Kerberos 5 support" &&
optional_depends gtk-doc 'doc=true' 'doc=false' "Build documenation with gtk-doc" &&
optional_depends gobject-introspection "introspection=true" "introspection=false" "for introspection"
optional_depends vala 'vapi=true' 'vapi=false' 'VALA bindings'
optional_depends -sub TLS glib-networking 'tls_check=true' 'tls_check=false' 'TLS support'
