           SPELL=glib2
if [[ $GLIB_VER == devel ]];then
         VERSION=2.55.2
     SOURCE_HASH=sha256:5a26bfa83bb412d181504a0773101093c9e538c3d0e09d30f5178885d78e72f6:UPSTREAM_HASH
else
         VERSION=2.54.3
