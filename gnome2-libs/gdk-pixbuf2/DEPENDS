depends meson &&
depends glib2 &&
depends JPEG &&
depends libpng &&
depends libpthread-stubs &&
depends pcre &&
depends shared-mime-info &&
depends tiff &&
depends xz-utils &&
depends zlib &&

optional_depends libx11 \
                 '-Dx11=true' \
                 '-Dx11=false' \
                 'enable X11 support' &&
if is_depends_enabled $SPELL libx11; then
  depends libxau &&
  depends libxcb &&
  depends libxdmcp
fi &&

optional_depends gobject-introspection \
                 "-Dgir=true" \
                 "-Dgir=false" \
                 "enable gobject-introspection" &&

optional_depends jasper \
                 "-Djasper=true" \
                 "-Djasper=false" \
                 "enable JPEG2000 loader"

