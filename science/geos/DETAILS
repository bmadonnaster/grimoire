   SOURCE_URL[0]=http://download.osgeo.org/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:12657c6649bfbf6efa3232a054969c6229bb23fc16a7c72d6ca5fdb662e0d08e14bbcaa6944a17de8972b6c236608d94c870ead0b04fada2d2af3d42c238058e
