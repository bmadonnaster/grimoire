           SPELL=wxmaxima
         VERSION=20.02.1
          SOURCE="wxmaxima-${VERSION}.tar.gz"
   SOURCE_URL[0]="https://github.com/wxMaxima-developers/wxmaxima/archive/Version-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:c1495cf740bf5a80238c35310cad1ab20481af5fa64796be4c1cec41f10518ba1b442e72c2888906e7b5a6c38bfee20765bd87257bd3dabbea584ae2c06fb2a5
