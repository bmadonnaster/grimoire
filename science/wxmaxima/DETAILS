          SOURCE="wxmaxima-${VERSION}.tar.gz"
   SOURCE_URL[0]="https://github.com/wxMaxima-developers/wxmaxima/archive/Version-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:a5d7832d224bad0963a86d3714172d51b67a1c8daf933e66b6c7817da102f942e37aa2a31d8f0f1e27438b61b1ba2705af333edcf2c33a53fdeec318fe837ff6
