          SOURCE="wxmaxima-${VERSION}.tar.gz"
   SOURCE_URL[0]="https://github.com/wxMaxima-developers/wxmaxima/archive/Version-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:d5eb0e09de55c3e6ebafeaa95957ca8bbdacac9ec1d99f6041fa99b7fa59364b3228336675f9bffa71b879b17268b80c695f16c9259bee6d5cab9ef7ed86294b
