           SPELL=wxmaxima
         VERSION=22.04.0
          SOURCE="wxmaxima-${VERSION}.tar.gz"
   SOURCE_URL[0]="https://github.com/wxMaxima-developers/wxmaxima/archive/Version-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:5197dab483012b39e910208406f32f2892d9acc3c0abc8582a61a43fad4f13e95692f8e499a2d0ca1680ca2ca48ea4c4853aa04c3f18d5e3a923c11316ebbf62
