           SPELL=wxmaxima
         VERSION=21.11.0
          SOURCE="wxmaxima-${VERSION}.tar.gz"
   SOURCE_URL[0]="https://github.com/wxMaxima-developers/wxmaxima/archive/Version-${VERSION}.tar.gz"
     SOURCE_HASH=sha512:1660537d475dc16e6d25011ae02b50a9179dd97b19dd115e914636fac71684906d77a2e4f4ab2d8506ac9f6b297de8feeeb46489a6dbf5782783f890a4181506
