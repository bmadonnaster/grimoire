   SOURCE_URL[0]=http://download.osgeo.org/geotiff/$SPELL/$SOURCE
     SOURCE_HASH=sha512:059c6e05eb0c47f17b102c7217a2e1636e76d622c4d1bdcf0bd89fb3505f3130bffa881e21c73cfd2ca0d6863b81322f85784658ba3539b53b63c3a8f38d1deb
