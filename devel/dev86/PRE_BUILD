default_pre_build        &&
cd  "$SOURCE_DIRECTORY"  &&

# fix for bug 14160
if [[ ${SMGL_COMPAT_ARCHS[1]} == "x86_64" || "${SMGL_COMPAT_ARCHS[1]}" == "em64t" ]]; then
    patch  -p1  <  $SCRIPT_DIRECTORY/dev86-noelks.patch
fi  &&

sed -i  "s|-O2|$CFLAGS|"        Makefile  &&
sed -i  "s|/man/|/share/man/|"  Makefile
