   SOURCE_URL[0]=https://github.com/KDE/${SPELL}/archive/v${VERSION}.tar.gz
     SOURCE_HASH=sha512:9aceb072a8de26ab2c254d6d58e3f8939ba96b7c165d92000fd93f71f16e491231d3456882ad72d6f340d82eda6b4665676eca105f381fa19483c1261bbb9149
