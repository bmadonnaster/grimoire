default_pre_build    &&
cd "$SOURCE_DIRECTORY" &&
apply_patch_dir patches &&

# Bootstrapping
if ! spell_ok "$SPELL"; then
  unpack_file 3 &&
  unpack_file 4 &&
  unpack_file 5
fi &&

# avoid rebuilding llvm
rm -r src/llvm-project &&

# No PIC confusion
sed -e "s;PIC\,;pic\,;" \
    -e "s;PIC:;pic:;" \
    -i src/rustllvm/PassWrapper.cpp
