dest="$INSTALL_ROOT"/usr &&
incdir="$dist"/include/nlhomann &&
pkgconfigdir="$dist"/lib/pkg-config &&

install -d "$pkgconfigdir" "$incdir" &&

install -m 444 "$SOURCE_CACHE/$SOURCE" "$incdir"/json.hpp &&

pcfile="$pkgconfigdir"/nlohmann_json.pc &&
cat > "$pcfile" <<! &&
Name: $SPELL
Version: $VERSION
Cflags: -I"$dest"
!
chmod 444 "$pcfile"
