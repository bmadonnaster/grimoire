# special functions for projects shich use meson build system
meson_build () {
  export LANG=$LC_ALL
  cd $SOURCE_DIRECTORY
  SCRIPT="meson --prefix ${INSTALL_ROOT}/usr --buildtype release --default-library shared"
  for LL in $OPTS; do
    SCRIPT+=" -D$LL"
  done
  SCRIPT+=" .  builddir/"
  $SCRIPT &&
  ninja -C builddir/
}

meson_install () {
  cd $SOURCE_DIRECTORY
  ninja -C builddir/ install
}

default_build() {
 meson_build
}

default_install() {
  meson_install
}
