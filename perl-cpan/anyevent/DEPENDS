persistent_remove EVENT_PROVIDER &&

message "Note: A pure-perl fallback backend is built-in" &&
suggest_depends ev             '' '' 'for libev support (preferred)' &&
suggest_depends event          '' '' 'for classic Perl Event module support' &&
suggest_depends perl-event-lib '' '' 'for libevent support (broken)' &&
suggest_depends perl-fltk      '' '' 'for FLTK2 support' &&
suggest_depends perl-glib      '' '' 'for Glib support' &&
suggest_depends perl-io-async  '' '' 'for IO::Async support' &&
suggest_depends perl-tk        '' '' 'for Tk support (broken)' &&
suggest_depends perl-uv        '' '' 'for libuv support' &&
suggest_depends perlqt         '' '' 'for Qt support' &&
suggest_depends poe            '' '' 'for POE support'
