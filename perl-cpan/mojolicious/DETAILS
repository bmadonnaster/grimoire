   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:9e85c3ed5fd01b07285e2841fa5e80a681d6fcc91f02938eeda9cf3e4369b627fee52c8e558ddd293cbdf143d2fc9da026c1b1b6cbf773d2efd6878fd0aa1a00
