   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:522789b15d69cd1c471db5f1f00f0141d1797b04ff58cfe8901072682e60f19451f551d2e808f17035b46b4fe31afae3b49a36e28e5a72fc17b947574b2955fa
