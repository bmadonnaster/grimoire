   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:fc85fe7a22e2de6e0aeb5f18f72d3636135bbe7ae9f6fd9c77d454042086d94d15c0bf2473969bfbc1cc21b810f7eccb8a49e24a3b6ea4bf808aeb3543a5d1b9
