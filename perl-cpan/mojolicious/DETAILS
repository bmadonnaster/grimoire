   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:61e73e84d663227ba6c978dbb3ac4e343cf2b93209dc50fd253f45f778c9dd506139cd6d9a68240ea127f400dd46df4633004b438c5c6b5f9535ad542dedeb2c
