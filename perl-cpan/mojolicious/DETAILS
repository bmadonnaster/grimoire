   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:9fd1a77d451c6c44be802a0ecdf89a0d0a45131cbde892d0b1f18c394ffcc763e2869fb0eb3c9c5b0a360de2ff6de3aba4f274351cfdce943ee28f743f95f5cb
