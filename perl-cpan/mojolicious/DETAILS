   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:4b641d349ecad4f4e99514a73760fc82576e72b75c801f696832b39fd28f6ac6663f01df0f58acc40d29f3edd2b56f07277d80323d541b1f9ec6af738840755d
