          SOURCE=$SPELLX-$VERSION.tar.gz
   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:29864baefb9c7786c77e371c6e29a8f811e434815c07ea265804431cbe37ed8bfcbb7b8bd6a0cfd45ae5aca8e53225121d9f30cd46cac1e6e87ae042d791c6b5
