   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:a8545ea2546e2d2fec8cd409ea1c5075ba2e8e30c755baaae9eec9b70c913937f12b160b5b89f186ba5693c98a50508d85a210595a5b6b1f77a956b7bbb14a13
