   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:bebbd415c85c97cc83a3c6e617b33c37526b0f2cdef66df429a0861f7233e4ca7d5884b1c7ce56de54fc82e280832729e528c9a851ccc673b45c9a3685297707
