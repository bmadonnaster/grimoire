   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:2293a05252a7e1d320d1e4cdc0b401d69954f8fd59fbff32355c813006a8d7062a886d6de25130d5a616d5da0887f7f7e6da2502ceb096365a9adede8ddc993d
