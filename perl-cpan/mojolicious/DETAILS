   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:39edad8c72df79a32b6c0a2a00c3496338a16c975df94d7803872df5132246351f222f56ed854a746cf3e15b8ad75707664b91e512002c69afbf7f47d23111d2
