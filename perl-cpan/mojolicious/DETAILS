   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:b5be73406b920185ac8f9255e7ad191b684c0833c67ab650de6f7a306e26db63a649fd70a7990b11f6db096b3deca6bd30c33c7f96a68c8a160e350b5e27fbed
