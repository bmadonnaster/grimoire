   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:5a3c806bd79a5ef71ca1dfe81bda9f558855a539ab1e7bb508205f72297340265f7b1538f33c767644d471d8c5bd47dc8228688f99d829c2641a0f3e42974aa1
