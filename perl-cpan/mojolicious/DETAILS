   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:14c29473f040548de2efef8bf5cd5676554f9f518b52e0ee03ed30415942fbeff5f5f2a6dd7592798e433e3e83653ce815697d4614e4680c9a6b8c699b0a171a
