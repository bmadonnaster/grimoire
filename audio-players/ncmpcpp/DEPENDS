depends icu &&
depends ncurses &&
depends readline &&
depends libmpdclient &&
depends -sub CXX gcc &&
depends -sub "DATE_TIME REGEX SYSTEM FILESYSTEM LOCALE PROGRAM_OPTIONS THREAD" boost &&

optional_depends curl \
                 "--with-curl" \
                 "--without-curl" \
                 "for fetching lyrics from the Internet" &&
optional_depends taglib \
                 "--with-taglib" \
                 "--without-taglib" \
                 "enable tag editor" &&
optional_depends fftw \
                 "--with-fftw --enable-visualizer" \
                 "--without-fftw --disable-visualizer" \
                 "enable music visualizer"
