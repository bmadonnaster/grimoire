depends glib2 &&
depends dbus-glib &&
depends libxfce4util &&

optional_depends GETTEXT \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends perl-glib \
                 "--enable-perl-bindings" \
                 "--disable-perl-bindings" \
                 "for Perl bindings" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "use gtk-doc to build documentation" &&

depends dbus
