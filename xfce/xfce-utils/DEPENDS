                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends gnome-doc-utils \
                 "--enable-gen-doc" \
                 "--disable-gen-doc" \
                 "to generate HTML documentation" &&

optional_depends dbus-glib \
                 "--enable-dbus" \
                 "--disable-dbus" \
                 "for D-Bus support"
