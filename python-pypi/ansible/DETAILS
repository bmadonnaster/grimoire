  SOURCE2_URL[0]=http://ftp.sourcemage.us/mirror/${SOURCE2}
    SOURCE2_HASH=sha512:faff5fb1dfb8aa2fa8443256f4bdca616d743b6834ff48295d7dcd7d577046b742d2f6fc18560b8dcfb340c28e0f7eda5357eb22a8c89213977c64df941063ee
