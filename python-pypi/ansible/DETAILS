         VERSION=2.9.13
          BRANCH=`echo ${VERSION}|cut -d. -f1,2`
  SECURITY_PATCH=5
          SOURCE="${SPELL}-${VERSION}.tar.gz"
   SOURCE_URL[0]=http://releases.ansible.com/${SPELL}/${SOURCE}
   SOURCE_URL[1]=https://pypi.io/packages/source/a/${SPELL}/${SOURCE}
