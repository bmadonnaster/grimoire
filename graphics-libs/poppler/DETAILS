   SOURCE_URL[0]=git://git.freedesktop.org/git/poppler/poppler:poppler-git
   SOURCE_IGNORE=volatile
else
 if [[ $POPPLER_BRANCH == devel ]]; then
         VERSION=0.60.0
     SOURCE_HASH=sha512:cf1151fee20446eda1c298da15d5daec19121df2fcf567034f515469f3380983daddbf29f4730d47079f021d8e501dd6a07eaabf87b265366c2af1d2c5f5cc1d
 else
         VERSION=0.60.0
     SOURCE_HASH=sha512:cf1151fee20446eda1c298da15d5daec19121df2fcf567034f515469f3380983daddbf29f4730d47079f021d8e501dd6a07eaabf87b265366c2af1d2c5f5cc1d
 fi
          SOURCE=$SPELL-$VERSION.tar.xz
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
   SOURCE_URL[0]=http://poppler.freedesktop.org/$SOURCE
fi
        WEB_SITE=http://poppler.freedesktop.org/
