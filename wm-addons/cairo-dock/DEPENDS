source "${GRIMOIRE}/CMAKE_DEPENDS" &&
depends OPENGL   &&
depends cairo    &&
depends librsvg2 &&
optional_depends gtk+2 \
                 "-Dforce-gtk2=yes" \
                 "-Dforce-gtk2=no" \
                 "for GTK 2 interface (otherwise use GTK 3)" &&
if ! is_depends_enabled $SPELL gtk+2; then
 depends gtk+3
fi
