   SOURCE_URL[0]=https://archive.monkeysphere.info/debian/pool/monkeysphere/m/monkeysphere/$SOURCE
     SOURCE_HASH=sha512:82e3b0f5f5532c75c1ccf2bd6269f7f4292f38956236fdb7813117a85ef36852b7d7c000552555ab0e233df9a84d7f4e5e86edd007bfcebdd6cde2e808f489f5
