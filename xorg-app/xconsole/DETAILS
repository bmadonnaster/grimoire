           SPELL=xconsole
         VERSION=1.0.8
          SOURCE=${SPELL}-${VERSION}.tar.xz
   SOURCE_URL[0]=http://xorg.freedesktop.org/releases/individual/app/${SOURCE}
         SOURCE2=$SOURCE.sig
  SOURCE2_URL[0]=${SOURCE_URL[0]}.sig
      SOURCE_GPG=xorg.gpg:$SOURCE.sig:UPSTREAM_KEY
