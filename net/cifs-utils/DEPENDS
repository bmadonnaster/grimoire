depends  autoconf  &&
depends  keyutils  &&
optional_depends systemd \
  "--enable-systemd" \
  "--disable-systemd" \
  "for systemd specific behavior for mount.cifs" &&
optional_depends LINUX-PAM-HEADERS \
  "--enable-pam" \
  "--disable-pam" \
  "for cifscreds PAM module" &&

if [[ "$CIFS_UPCALL" == "y" ]]; then
    depends  krb5
fi

