      PATCHLEVEL=1
          SOURCE=${SPELL}-${VERSION}.tar.xz
   SOURCE_URL[0]=https://www.kernel.org/pub/linux/network/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:c0b9e924a28d58539d44c314168ae7aa46dfea8ce9d125198f525a6d6ef95ca77fd0357c4c4c7548b362b9de8e6f85c7915b1a4cf89b65116c4cbc4df75318e1
