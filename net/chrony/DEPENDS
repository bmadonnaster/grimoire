#                 "" "--without-tomcrypt" \
#                 "for stronger authentication keys via libtomcrypt" &&

optional_depends libcap \
                 "" "--disable-linuxcaps" \
                 "for Linux capabilities support" &&

optional_depends readline \
                 "" "--disable-readline" \
                 "for line editing support"
