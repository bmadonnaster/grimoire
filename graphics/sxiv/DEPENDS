depends libx11 &&
depends libxft &&
depends imlib2 &&

optional_depends GIFLIB \
                 "HAVE_GIFLIB=1" \
                 "HAVE_GIFLIB=0" \
                 "for GIF animations support" &&

optional_depends libexif \
                 "HAVE_LIBEXIF=1" \
                 "HAVE_LIBEXIF=0" \
                 "for JPEG auto-orientation and EXIF thumbnails support"
