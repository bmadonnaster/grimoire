   SOURCE_URL[0]=https://downloads.sourceforge.net/sourceforge/djvu/DjVuLibre/$(echo $VERSION | cut -f1,2,3 -d.)/${SOURCE}
        WEB_SITE=https://djvu.sourceforge.net/
