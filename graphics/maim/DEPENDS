. "${GRIMOIRE}/FUNCTIONS" &&

depends cmake &&
depends libpng &&
depends JPEG &&
depends libwebp &&
depends libx11 &&
depends libxrender &&
depends libxrandr &&
depends libxfixes &&
depends libxcomposite &&
depends slop &&

if spell_ok slop && is_version_less $(installed_version slop) 7; then
  force_depends slop
fi &&

if spell_ok gcc && is_version_less $(installed_version gcc) 4.8; then
  depends -sub REGEX boost
fi &&

optional_depends icu \
                 "-DMAIM_UNICODE=ON" \
                 "-DMAIM_UNICODE=OFF" \
                 "for Unicode support"
