depends glib2 &&
depends LIBUSB &&
depends libfprint &&
depends dbus-glib &&
depends policykit &&

optional_depends GETTEXT \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to use gtk-doc to build documentation" &&

optional_depends linux-pam '--enable-pam'            \
                           '--disable-pam'           \
                           'build the PAM module'
