. "$GRIMOIRE"/CMAKE_DEPENDS &&
optional_depends alsa-lib \
		 -DENABLE_ALSA={ON,OFF} \
                 'for ALSA support' &&
optional_depends JACK-DRIVER \
		 -DENABLE_JACK={ON,OFF} \
                 'for JACK support' &&
optional_depends LIBPULSE \
		 -DENABLE_PULSEAUDIO={ON,OFF} \
                 'for PulseAudio support'
