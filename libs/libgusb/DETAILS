source $GRIMOIRE/MESON_FUNCTIONS
           SPELL=libgusb
         VERSION=0.3.10
     SOURCE_HASH=sha512:66bd7c292cb9df2799b02acd48dc4b07794e7339ea1bd6473ea512dfec1b8e7e58abbd40f16a2a4805240cc8df4aec050335edb4f4178ad12ac5275438b8ae59
          SOURCE="${SPELL}-${VERSION}.tar.xz"
   SOURCE_URL[0]=https://people.freedesktop.org/~hughsient/releases/${SOURCE}
