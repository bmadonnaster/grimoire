depends  glib2  &&

optional_depends gpgme \
                 "--enable-smime" \
                 "--disable-smime" \
                 "for S/MIME support" &&

optional_depends gobject-introspection \
                 "--enable-introspection" \
                 "--disable-introspection" \
                 "for introspection support" &&

optional_depends vala \
                 "--enable-vala" \
                 "--disable-vala" \
                 "for Vala bindings" &&

optional_depends gtk-sharp-2   \
                 "--enable-mono"  \
                 "--disable-mono"  \
                 "for mono bindings"
