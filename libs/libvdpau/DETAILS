   SOURCE_URL[0]="${URL_PREFIX}/14b620084c027d546fa0b3f083b800c6/${SOURCE}"
         SOURCE2="${SOURCE}.sig"
  SOURCE2_URL[0]="${URL_PREFIX}/0abd351387dbb4aa21a43caf847074f3/${SOURCE2}"
